{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/events",
        "destination": "/events.html"
      },
      {
        "source": "/events/add",
        "destination": "/create_event.html"
      },
      {
        "source": "/event/**",
        "destination": "/event.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
